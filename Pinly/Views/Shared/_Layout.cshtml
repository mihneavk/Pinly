@using Microsoft.AspNetCore.Identity
@using Pinly.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pinly</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Pinly.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-danger fs-3 me-4" asp-area="" asp-controller="Home" asp-action="Index" style="letter-spacing: -1px;">
                    <i class="bi bi-pinterest"></i> Pinly
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">

                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold px-3 rounded-pill hover-bg-light" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-compass me-1"></i> Explorează
                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold px-3 rounded-pill hover-bg-light" asp-area="" asp-controller="Home" asp-action="Following">
                                    <i class="bi bi-people-fill me-1"></i> Urmăriri
                                </a>
                            </li>
                        }
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold px-3 rounded-pill hover-bg-light" asp-controller="Chat" asp-action="PublicGroups">
                                    <i class="bi bi-globe-europe-africa me-1"></i> Grupuri
                                </a>
                            </li>
                        }

                    </ul>

                    <div class="position-relative mx-3 flex-grow-1" style="max-width: 500px;">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0 rounded-start-pill ps-3">
                                <i class="bi bi-search text-muted"></i>
                            </span>
                            <input type="text" id="userSearchInput" class="form-control border-0 bg-light rounded-end-pill py-2" placeholder="Caută persoane..." autocomplete="off">
                        </div>
                        <div id="searchResults" class="list-group position-absolute w-100 shadow-lg rounded-3 mt-1" style="display: none; z-index: 9999; overflow: hidden;"></div>
                    </div>

                    <ul class="navbar-nav align-items-center ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item me-1">
                                <a class="nav-link text-dark position-relative p-2 rounded-circle hover-bg-light" asp-controller="Chat" asp-action="Index" title="Mesaje">
                                    <i class="bi bi-chat-dots-fill fs-5"></i>
                                </a>
                            </li>

                            <li class="nav-item dropdown me-2">
                                <a class="nav-link text-dark position-relative p-2 rounded-circle hover-bg-light" href="#" id="notifDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-bell-fill fs-5"></i>
                                    <span id="notifBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display:none; font-size: 0.6rem;">0</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 rounded-4 p-0 mt-2" aria-labelledby="notifDropdown" style="width: 340px; max-height: 450px; overflow-y: auto;" id="notifList">
                                    <li class="text-center p-4 text-muted small"><div class="spinner-border spinner-border-sm text-secondary" role="status"></div> Se încarcă...</li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark fw-bold px-3 rounded-pill hover-bg-light" asp-area="" asp-controller="Profiles" asp-action="Show" asp-route-id="@UserManager.GetUserId(User)" title="Vezi Profil">
                                    @{
                                        var user = await UserManager.GetUserAsync(User);
                                        var pic = user?.ProfilePicturePath;
                                    }
                                    @if (!string.IsNullOrEmpty(pic))
                                    {
                                        <img src="@pic" class="rounded-circle border" style="width: 28px; height: 28px; object-fit: cover; margin-right: 5px; margin-top: -2px;">
                                    }
                                    else
                                    {
                                        <i class="bi bi-person-circle fs-5 me-1" style="vertical-align: middle;"></i>
                                    }
                                    <span style="vertical-align: middle;">Profil</span>
                                </a>
                            </li>

                            <li class="nav-item ms-1">
                                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button type="submit" class="nav-link btn btn-link text-secondary p-2 rounded-circle hover-bg-light" title="Deconectare">
                                        <i class="bi bi-box-arrow-right fs-5"></i>
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="btn btn-danger rounded-pill fw-bold px-3 me-2" asp-area="Identity" asp-page="/Account/Login">Logare</a></li>
                            <li class="nav-item"><a class="btn btn-light rounded-pill fw-bold px-3 border" asp-area="Identity" asp-page="/Account/Register">Înregistrare</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 py-3 bg-light">
        <div class="container text-center">
            &copy; 2025 - Pinly - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <style>
        .hover-bg-light:hover {
            background-color: #f0f0f0;
            transition: 0.2s;
        }

        #searchResults .list-group-item {
            border: none;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            transition: 0.2s;
        }

            #searchResults .list-group-item:hover {
                background-color: #f9f9f9;
            }

        .notif-item {
            font-size: 0.9rem;
            border-bottom: 1px solid #eee;
        }

            .notif-item:hover {
                background-color: #f8f8f8;
            }

        .notif-unread {
            background-color: #fff5f5;
            border-left: 3px solid #E60023;
        }

        #notifList::-webkit-scrollbar {
            width: 6px;
        }

        #notifList::-webkit-scrollbar-thumb {
            background-color: #ccc;
            border-radius: 4px;
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // SEARCH
            const searchInput = document.getElementById('userSearchInput');
            const resultsBox = document.getElementById('searchResults');
            let searchTimeout = null;

            if(searchInput) {
                searchInput.addEventListener('input', function() {
                    const term = this.value;
                    if (term.length < 1) { resultsBox.style.display = 'none'; return; }
                    clearTimeout(searchTimeout);
                    searchTimeout = setTimeout(() => { fetchUsers(term); }, 300);
                });
                document.addEventListener('click', function(e) {
                    if (!searchInput.contains(e.target) && !resultsBox.contains(e.target)) { resultsBox.style.display = 'none'; }
                });
            }

            function fetchUsers(term) {
                fetch(`/Profiles/SearchUsers?term=${encodeURIComponent(term)}`)
                    .then(r => r.json())
                    .then(data => {
                        resultsBox.innerHTML = '';
                        if (data.length === 0) resultsBox.innerHTML = '<div class="list-group-item text-muted small p-3">Niciun utilizator gasit.</div>';
                        else {
                            data.forEach(user => {
                                let avatar = user.avatar ? `<img src="${user.avatar}" class="rounded-circle" style="width:32px;height:32px;object-fit:cover;margin-right:10px;">` : `<div class="rounded-circle d-flex align-items-center justify-content-center bg-secondary text-white fw-bold" style="width:32px;height:32px;margin-right:10px;">${user.username.charAt(0).toUpperCase()}</div>`;
                                const item = document.createElement('a');
                                item.href = `/Profiles/Show/${user.id}`;
                                item.className = 'list-group-item list-group-item-action d-flex align-items-center p-2';
                                item.innerHTML = `${avatar}<span class="fw-bold text-dark">${user.username}</span>`;
                                resultsBox.appendChild(item);
                            });
                        }
                        resultsBox.style.display = 'block';
                    });
            }

            // NOTIFICATIONS
            const notifDropdown = document.getElementById('notifDropdown');
            const notifList = document.getElementById('notifList');
            const notifBadge = document.getElementById('notifBadge');

            if(notifDropdown) {
                loadNotifications(true);

                notifDropdown.addEventListener('show.bs.dropdown', function () {
                    notifBadge.style.display = 'none';
                    fetch('/Notifications/MarkAllRead', { method: 'POST' });
                    loadNotifications(false);
                });
            }

            function loadNotifications(updateBadge = true) {
                fetch('/Notifications/GetLatest')
                    .then(r => r.json())
                    .then(data => {
                        notifList.innerHTML = '';
                        let unreadCount = 0;
                        if (data.length === 0) notifList.innerHTML = '<li class="text-center p-4 text-muted small"><i class="bi bi-bell-slash fs-4 d-block mb-2"></i>Nu ai notificări noi.</li>';
                        else {
                            data.forEach(n => {
                                if (!n.isRead) unreadCount++;
                                let bgClass = n.isRead ? '' : 'notif-unread';
                                let avatar = n.senderPic ? `<img src="${n.senderPic}" class="rounded-circle me-2" style="width:40px;height:40px;object-fit:cover;">` : `<div class="rounded-circle me-2 d-flex align-items-center justify-content-center bg-secondary text-white fw-bold" style="width:40px;height:40px;">${n.senderName.charAt(0).toUpperCase()}</div>`;

                                let textContent = `<span class="fw-bold text-dark">${n.senderName}</span> ${n.text}`;
                                let dateContent = `<div class="text-muted mt-1" style="font-size:0.75rem;">${n.date}</div>`;

                                let content = `
                                    <div class="d-flex align-items-center w-100">
                                        ${avatar}
                                        <div class="flex-grow-1 ms-2" style="line-height: 1.2;">
                                            <div style="font-size: 0.9rem;">${textContent}</div>
                                            ${dateContent}
                                            ${getActionButtons(n)}
                                        </div>
                                    </div>`;

                                let li = document.createElement('li');
                                li.className = `dropdown-item p-3 text-wrap notif-item ${bgClass}`;

                                if(n.type !== 'Request') {
                                    li.style.cursor = 'pointer';
                                    li.onclick = (e) => {
                                        if(e.target.tagName === 'BUTTON') return;

                                        // MODIFICARE: Redirectionare corecta pe baza groupId
                                        if (n.groupId) {
                                            window.location.href = `/Chat/Index?groupId=${n.groupId}`;
                                        } else if (n.pinId) {
                                            window.location.href = `/Pins/Show/${n.pinId}`;
                                        } else {
                                            window.location.href = `/Profiles/Show/${n.senderId}`;
                                        }
                                    };
                                }
                                li.innerHTML = content;
                                notifList.appendChild(li);
                            });
                        }

                        if (updateBadge) {
                            if (unreadCount > 0) { notifBadge.innerText = unreadCount; notifBadge.style.display = 'block'; }
                            else { notifBadge.style.display = 'none'; }
                        }
                    });
            }

            function getActionButtons(n) {
                if (n.type === 'Request') {
                    return `<div class="mt-2"><button onclick="respondRequest(${n.id}, true)" class="btn btn-sm btn-danger rounded-pill px-3 py-1 me-2 fw-bold" style="font-size:0.8rem;">Acceptă</button><button onclick="respondRequest(${n.id}, false)" class="btn btn-sm btn-outline-secondary rounded-pill px-3 py-1 fw-bold" style="font-size:0.8rem;">Refuză</button></div>`;
                }
                return '';
            }

            window.respondRequest = function(notifId, accept) {
                let url = accept ? '/Notifications/AcceptRequest' : '/Notifications/DeclineRequest';
                fetch(url + `?notificationId=${notifId}`, { method: 'POST' }).then(r => { if(r.ok) loadNotifications(false); });
            };
        });
    </script>
</body>
</html>