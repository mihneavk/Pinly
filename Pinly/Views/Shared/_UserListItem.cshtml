@model Pinly.Models.ApplicationUser

@{
    var uName = Model.UserName ?? "Anonim";
    var uInit = (!string.IsNullOrEmpty(uName)) ? uName.Substring(0, 1).ToUpper() : "U";
    var uPic = Model.ProfilePicturePath;
}

<li class="list-group-item border-0 d-flex align-items-center justify-content-between py-3 mb-2 shadow-sm rounded-4">
    <a asp-controller="Profiles" asp-action="Show" asp-route-id="@Model.Id" class="d-flex align-items-center text-decoration-none text-dark">

        <div class="rounded-circle flex-shrink-0 overflow-hidden me-3 bg-secondary text-white" style="width: 50px; height: 50px;">
            @if (!string.IsNullOrEmpty(uPic))
            {
                <img src="@uPic" style="width: 100%; height: 100%; object-fit: cover;" />
            }
            else
            {
                <div class="d-flex justify-content-center align-items-center h-100 fw-bold fs-5">@uInit</div>
            }
        </div>

        <div>
            <span class="fw-bold fs-5 d-block">@uName</span>
        </div>
    </a>

    <a asp-controller="Profiles" asp-action="Show" asp-route-id="@Model.Id" class="btn btn-light rounded-pill btn-sm fw-bold px-3">
        Vezi profil
    </a>
</li>