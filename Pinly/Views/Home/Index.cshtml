@model IEnumerable<Pinly.Models.Pin>

@{
    ViewData["Title"] = "Acasă";
}

<style>
    .masonry-grid {
        column-count: 4;
        column-gap: 1.5rem;
    }

    .masonry-item {
        display: inline-block;
        width: 100%;
        margin-bottom: 1.5rem;
        break-inside: avoid;
    }
    @@media (max-width: 992px) {
        .masonry-grid {
            column-count: 3;
        }
    }
    @@media (max-width: 768px) {
        .masonry-grid {
            column-count: 2;
        }
    }
    @@media (max-width: 576px) {
        .masonry-grid {
            column-count: 1;
        }
    }

    .pin-card:hover {
        transform: scale(1.02);
        transition: 0.3s;
        box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        cursor: pointer;
    }
</style>

@if (!User.Identity.IsAuthenticated)
{
    <div class="jumbotron text-center bg-light p-5 mb-5 rounded-3">
        <h1 class="display-4 fw-bold" style="color: #E60023;">Bine ai venit pe Pinly!</h1>
        <p class="lead">Descoperă inspirația pentru următorul tău proiect.</p>
        <hr class="my-4">
        <a class="btn btn-danger btn-lg" asp-area="Identity" asp-page="/Account/Register" role="button">Înregistrează-te</a>
        <a class="btn btn-outline-secondary btn-lg" asp-area="Identity" asp-page="/Account/Login" role="button">Autentificare</a>
    </div>
}
else
{
    <div class="container mb-4 d-flex justify-content-between align-items-center">
        <h4 class="fw-bold">Cele mai noi Pin-uri</h4>
        <a asp-controller="Pins" asp-action="Create" class="btn btn-danger rounded-pill px-4"><i class="bi bi-plus-lg"></i> Adaugă Pin</a>
    </div>
}

<div class="container-fluid">
    @if (!Model.Any())
    {
        <div class="text-center mt-5"><h3 class="text-muted">Încă nu există pin-uri. Fii tu primul care postează!</h3></div>
    }
    else
    {
        <div class="masonry-grid">
            @foreach (var pin in Model)
            {
                <div class="card masonry-item border-0 shadow-sm pin-card">
                    <a asp-controller="Pins" asp-action="Show" asp-route-id="@pin.Id" class="text-decoration-none text-dark">
                        <img src="@pin.MediaPath" class="card-img-top rounded-3" style="width: 100%; display: block;">
                    </a>

                    <div class="card-body p-3">
                        @if (!string.IsNullOrEmpty(pin.Title))
                        {
                            <h6 class="card-title fw-bold mb-1 text-dark text-truncate">@pin.Title</h6>
                        }
                        @if (!string.IsNullOrEmpty(pin.Description))
                        {
                            <p class="card-text text-muted small mt-1 mb-3" style="font-size: 0.85rem; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">@pin.Description</p>
                        }

                        <div class="d-flex align-items-center justify-content-between mt-2 pt-2 border-top">
                            <div class="d-flex align-items-center" style="min-width: 0;">
                                @{
                                    var displayName = pin.ApplicationUser?.FullName;
                                    if (string.IsNullOrWhiteSpace(displayName)) displayName = pin.ApplicationUser?.UserName?.Split('@')[0] ?? "Anonim";
                                    var initial = (!string.IsNullOrEmpty(displayName)) ? displayName.Substring(0, 1).ToUpper() : "U";
                                    var profilePic = pin.ApplicationUser?.ProfilePicturePath; // Luăm calea pozei
                                }

                                <a asp-controller="Profiles" asp-action="Show" asp-route-id="@pin.ApplicationUserId" class="d-flex align-items-center text-decoration-none text-dark" style="min-width: 0;">

                                    <div class="rounded-circle flex-shrink-0 overflow-hidden"
                                         style="width: 32px; height: 32px; margin-right: 10px; background-color: #f0f0f0;">
                                        @if (!string.IsNullOrEmpty(profilePic))
                                        {
                                            <img src="@profilePic" style="width: 100%; height: 100%; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="d-flex justify-content-center align-items-center h-100 fw-bold text-dark">@initial</div>
                                        }
                                    </div>

                                    <div class="d-flex flex-column text-truncate">
                                        <span class="fw-bold text-dark text-truncate" style="font-size: 0.85rem; max-width: 120px;">@displayName</span>
                                    </div>
                                </a>
                            </div>
                            <button class="btn btn-sm btn-light rounded-circle text-muted"><i class="bi bi-heart-fill" style="color: #e2e2e2;"></i></button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>