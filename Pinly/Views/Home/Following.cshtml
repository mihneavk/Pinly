@model IEnumerable<Pinly.Models.Pin>

@{
    ViewData["Title"] = "Urmăriri";
}

<style>
    .masonry-grid {
        column-count: 4;
        column-gap: 1.5rem;
    }

    .masonry-item {
        display: inline-block;
        width: 100%;
        margin-bottom: 1.5rem;
        break-inside: avoid;
    }

    @@media (max-width: 992px) {
        .masonry-grid {
            column-count: 3;
        }
    }

    @@media (max-width: 768px) {
        .masonry-grid {
            column-count: 2;
        }
    }

    @@media (max-width: 576px) {
        .masonry-grid {
            column-count: 1;
        }
    }

    .pin-card:hover {
        transform: scale(1.02);
        transition: 0.3s;
        box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        cursor: pointer;
    }
</style>

<div class="container mb-4 mt-4">
    <h4 class="fw-bold"><i class="bi bi-people-fill me-2"></i>Postări de la persoanele urmărite</h4>
    <hr />
</div>

<div class="container-fluid">
    @if (!Model.Any())
    {
        <div class="text-center mt-5">
            <h3 class="text-muted">Nu există postări recente.</h3>
            <p class="text-muted">Încearcă să urmărești mai multe persoane!</p>
            <a asp-action="Index" class="btn btn-outline-danger rounded-pill">Explorează</a>
        </div>
    }
    else
    {
        <div class="masonry-grid">
            @foreach (var pin in Model)
            {
                <div class="card masonry-item border-0 shadow-sm pin-card">
                    <a asp-controller="Pins" asp-action="Show" asp-route-id="@pin.Id" class="text-decoration-none text-dark">
                        @{
                            var ext = System.IO.Path.GetExtension(pin.MediaPath)?.ToLower();
                            bool isVideo = ext == ".mp4" || ext == ".webm" || ext == ".mov" || ext == ".ogg";
                        }

                        @if (isVideo)
                        {
                            <video src="@pin.MediaPath" class="card-img-top rounded-3" style="width: 100%; display: block;" muted loop playsinline onmouseover="this.play()" onmouseout="this.pause();"></video>
                        }
                        else
                        {
                            <img src="@pin.MediaPath" class="card-img-top rounded-3" style="width: 100%; display: block;">
                        }
                    </a>

                    <div class="card-body p-3">
                        @if (!string.IsNullOrEmpty(pin.Title))
                        {
                            <h6 class="card-title fw-bold mb-1 text-dark text-truncate">@pin.Title</h6>
                        }
                        @if (!string.IsNullOrEmpty(pin.Description))
                        {
                            <p class="card-text text-muted small mt-1 mb-3" style="font-size: 0.85rem; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">@pin.Description</p>
                        }

                        <div class="d-flex align-items-center justify-content-between mt-2 pt-2 border-top">
                            <div class="d-flex align-items-center" style="min-width: 0;">
                                @{
                                    var displayName = pin.ApplicationUser?.UserName ?? "Anonim";
                                    var initial = (!string.IsNullOrEmpty(displayName)) ? displayName.Substring(0, 1).ToUpper() : "U";
                                    var profilePic = pin.ApplicationUser?.ProfilePicturePath;
                                }

                                <a asp-controller="Profiles" asp-action="Show" asp-route-id="@pin.ApplicationUserId" class="d-flex align-items-center text-decoration-none text-dark" style="min-width: 0;">
                                    <div class="rounded-circle flex-shrink-0 overflow-hidden"
                                         style="width: 32px; height: 32px; margin-right: 10px; background-color: #f0f0f0;">
                                        @if (!string.IsNullOrEmpty(profilePic))
                                        {
                                            <img src="@profilePic" style="width: 100%; height: 100%; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="d-flex justify-content-center align-items-center h-100 fw-bold text-dark">@initial</div>
                                        }
                                    </div>
                                    <div class="d-flex flex-column text-truncate">
                                        <span class="fw-bold text-dark text-truncate" style="font-size: 0.85rem; max-width: 120px;">@displayName</span>
                                    </div>
                                </a>
                            </div>

                            @{
                                var isLiked = false;
                                var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                                isLiked = pin.Reactions.Any(r => r.ApplicationUserId == userId);
                            }

                            <form asp-controller="Pins" asp-action="ToggleLike" method="post">
                                <input type="hidden" name="pinId" value="@pin.Id" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />

                                <button type="submit" class="btn btn-sm rounded-circle @(isLiked ? "btn-danger" : "btn-light")"
                                        title="@(isLiked ? "Unlike" : "Like")">
                                    <i class="bi @(isLiked ? "bi-heart-fill" : "bi-heart")" style="@(isLiked ? "color: white;" : "color: #e2e2e2;")"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>