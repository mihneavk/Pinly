@model List<Pinly.Models.ApplicationUser>

<div class="container mt-5">
    <h3>Persoane care îl urmăresc pe @ViewBag.TargetUserName</h3>
    <hr />

    @if (Model.Any())
    {
        <div class="list-group">
            @foreach (var user in Model)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-secondary d-flex justify-content-center align-items-center me-3" style="width: 40px; height: 40px; color: white;">
                            @(user.FullName?.Length > 0 ? user.FullName[0] : 'U')
                        </div>

                        <div>
                            <h5 class="mb-0">@user.FullName</h5>
                            <small class="text-muted">@user.UserName</small>
                        </div>
                    </div>

                    <a asp-controller="User" asp-action="Show" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                        Vezi Profil
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">Acest utilizator nu are încă urmăritori.</p>
    }
</div>