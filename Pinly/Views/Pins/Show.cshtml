@using Microsoft.AspNetCore.Identity
@using Pinly.Models
@inject UserManager<ApplicationUser> UserManager

@model Pinly.Models.Pin

@{
    ViewData["Title"] = Model.Title;
    var currentUser = UserManager.GetUserId(User);
    var isAdmin = User.IsInRole("Admin");
    var isPinOwner = (currentUser == Model.ApplicationUserId);

    var ext = System.IO.Path.GetExtension(Model.MediaPath)?.ToLower();
    bool isVideo = ext == ".mp4" || ext == ".webm" || ext == ".mov" || ext == ".ogg";
}

<div class="container mt-4 mb-5">

    <a asp-controller="Home" asp-action="Index" class="btn btn-light rounded-circle shadow-sm position-fixed" style="top: 80px; left: 20px; z-index: 1000; width: 50px; height: 50px; display: flex; align-items: center; justify-content: center;">
        <i class="bi bi-arrow-left" style="font-size: 1.5rem;"></i>
    </a>

    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 1000px; margin: 0 auto;">
        <div class="row g-0">
            <div class="col-md-6 bg-dark d-flex align-items-center justify-content-center">
                @if (isVideo)
                {
                    <video src="@Model.MediaPath" class="img-fluid" controls autoplay style="max-height: 85vh; width: 100%;"></video>
                }
                else
                {
                    <img src="@Model.MediaPath" class="img-fluid" alt="@Model.Title" style="max-height: 85vh; object-fit: contain; width: 100%;">
                }
            </div>

            <div class="col-md-6 d-flex flex-column" style="max-height: 85vh;">
                <div class="p-4 flex-shrink-0">

                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div class="d-flex align-items-center gap-2">
                            @{
                                var isLiked = false;
                                if (User.Identity.IsAuthenticated)
                                {
                                    isLiked = Model.Reactions.Any(r => r.ApplicationUserId == currentUser);
                                }
                                var likeCount = Model.Reactions.Count;
                            }

                            <form asp-controller="Pins" asp-action="ToggleLike" method="post">
                                <input type="hidden" name="pinId" value="@Model.Id" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />

                                <button type="submit" class="btn rounded-pill px-3 fw-bold @(isLiked ? "btn-danger" : "btn-light")">
                                    <i class="bi @(isLiked ? "bi-heart-fill" : "bi-heart") me-1"></i>
                                    @(isLiked ? "Liked" : "Like")
                                </button>
                            </form>

                            @if (likeCount > 0)
                            {
                                <a asp-action="Likers" asp-route-id="@Model.Id" class="text-decoration-none text-muted small fw-bold ms-1">
                                    @likeCount aprecieri
                                </a>
                            }
                        </div>

                        @if (isPinOwner || isAdmin)
                        {
                            <form asp-action="Delete" asp-controller="Pins" method="post" onsubmit="return confirm('Sigur stergi acest Pin?');">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-outline-danger rounded-pill px-3 btn-sm fw-bold">
                                    <i class="bi bi-trash"></i> Sterge Pin
                                </button>
                            </form>
                        }
                    </div>

                    <h1 class="fw-bold mb-3" style="font-size: 2rem;">@Model.Title</h1>
                    <p class="text-muted">@Model.Description</p>

                    <div class="mt-4 mb-3">
                        @{
                            var authorName = Model.ApplicationUser?.UserName ?? "Anonim";
                            var authorInitial = (!string.IsNullOrEmpty(authorName)) ? authorName.Substring(0, 1).ToUpper() : "A";
                            var authorPic = Model.ApplicationUser?.ProfilePicturePath;
                        }

                        <a asp-controller="Profiles" asp-action="Show" asp-route-id="@Model.ApplicationUserId" class="d-flex align-items-center text-decoration-none text-dark">
                            <div class="rounded-circle flex-shrink-0 overflow-hidden me-3 bg-secondary text-white" style="width: 48px; height: 48px;">
                                @if (!string.IsNullOrEmpty(authorPic))
                                {
                                    <img src="@authorPic" style="width: 100%; height: 100%; object-fit: cover;" />
                                }
                                else
                                {

                                    <div class="d-flex justify-content-center align-items-center h-100 fw-bold" style="font-size: 1.2rem;">@authorInitial</div>
                                }
                            </div>
                            <div>
                                <span class="fw-bold d-block">@authorName</span>
                                <small class="text-muted">Autor (Vezi profil)</small>
                            </div>
                        </a>
                    </div>
                    <hr />
                    <h5 class="fw-bold mt-4">Comentarii</h5>
                </div>

                <div class="flex-grow-1 overflow-auto p-4 pt-0" style="min-height: 200px;">
                    @if (Model.Comments != null && Model.Comments.Any())
                    {
                        foreach (var comment in Model.Comments.OrderBy(c => c.CreatedDate))
                        {
                            var comUser = comment.ApplicationUser?.UserName ?? "Anonim";
                            var comInitial = (!string.IsNullOrEmpty(comUser)) ? comUser.Substring(0, 1).ToUpper() : "U";
                            var comPic = comment.ApplicationUser?.ProfilePicturePath;
                            var isCommentOwner = (currentUser == comment.ApplicationUserId);
                            var comLikesCount = comment.Likes?.Count ?? 0;
                            var isComLiked = comment.Likes != null && comment.Likes.Any(l => l.ApplicationUserId == currentUser);

                            <div class="d-flex mb-3 group-comment position-relative">
                                <a asp-controller="Profiles" asp-action="Show" asp-route-id="@comment.ApplicationUserId" class="text-decoration-none text-dark d-flex">
                                    <div class="rounded-circle flex-shrink-0 overflow-hidden me-2 bg-light text-dark" style="width: 32px; height: 32px;">
                                        @if (!string.IsNullOrEmpty(comPic))
                                        {
                                            <img src="@comPic" style="width: 100%; height: 100%; object-fit: cover;" />
                                        }
                                        else
                                        {

                                            <div class="d-flex justify-content-center align-items-center h-100 fw-bold" style="font-size: 0.9rem;">@comInitial</div>
                                        }
                                    </div>
                                </a>

                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <span class="fw-bold me-2" style="font-size: 0.9rem;">@comUser</span>
                                            <span class="text-muted small">@comment.CreatedDate.ToString("dd MMM HH:mm")</span>
                                        </div>

                                        <div class="d-flex align-items-center">
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <form asp-action="ToggleCommentLike" asp-controller="Pins" method="post" class="me-2">
                                                    <input type="hidden" name="commentId" value="@comment.Id" />
                                                    <button type="submit" class="btn btn-sm p-0 border-0" title="Like Comment">
                                                        <i class="bi @(isComLiked ? "bi-heart-fill text-danger" : "bi-heart text-muted")" style="font-size: 0.8rem;"></i>
                                                        @if (comLikesCount > 0)
                                                        {
                                                            <span class="small text-muted" style="font-size: 0.75rem;">@comLikesCount</span>
                                                        }
                                                    </button>
                                                </form>
                                            }

                                            @if (isCommentOwner || isAdmin)
                                            {
                                                <div class="dropdown">
                                                    <button class="btn btn-link text-muted p-0 ms-1" type="button" data-bs-toggle="dropdown">
                                                        <i class="bi bi-three-dots"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm">
                                                        @if (isCommentOwner)
                                                        {
                                                            <li><a class="dropdown-item small" href="#" onclick="toggleEdit('@comment.Id'); return false;">Editeaza</a></li>
                                                        }
                                                        <li>
                                                            <form asp-action="DeleteComment" asp-controller="Pins" method="post">
                                                                <input type="hidden" name="commentId" value="@comment.Id" />
                                                                <button type="submit" class="dropdown-item small text-danger">Sterge</button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                            }
                                        </div>
                                    </div>

                                    <div id="comment-text-@comment.Id" style="font-size: 0.95rem;">
                                        @comment.Content
                                    </div>

                                    @if (isCommentOwner)
                                    {
                                        <div id="comment-edit-@comment.Id" style="display: none;" class="mt-2">
                                            <form asp-action="EditComment" asp-controller="Pins" method="post">
                                                <input type="hidden" name="commentId" value="@comment.Id" />
                                                <div class="input-group">
                                                    <input type="text" name="newContent" class="form-control form-control-sm rounded" value="@comment.Content" autocomplete="off" />
                                                    <button type="submit" class="btn btn-sm btn-success ms-1">Salveaza</button>
                                                    <button type="button" class="btn btn-sm btn-outline-secondary ms-1" onclick="toggleEdit('@comment.Id')">X</button>
                                                </div>
                                            </form>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted mt-4"><p>Nu exista comentarii inca.<br>Fii primul care spune ceva!</p></div>
                    }
                </div>

                <div class="p-3 border-top bg-white flex-shrink-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-action="AddComment" asp-controller="Pins" method="post">
                            <input type="hidden" name="pinId" value="@Model.Id" />
                            <div class="input-group">
                                <input type="text" name="content" class="form-control rounded-pill bg-light border-0 py-3 px-4" placeholder="Adauga un comentariu..." required autocomplete="off">
                                <button class="btn btn-link text-danger fw-bold" type="submit">Publica</button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="text-center"><a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-danger rounded-pill w-100">Logheaza-te pentru a comenta</a></div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleEdit(commentId) {
        var textDiv = document.getElementById('comment-text-' + commentId);
        var editDiv = document.getElementById('comment-edit-' + commentId);
        if (textDiv.style.display === 'none') { textDiv.style.display = 'block'; editDiv.style.display = 'none'; }
        else { textDiv.style.display = 'none'; editDiv.style.display = 'block'; }
    }
</script>