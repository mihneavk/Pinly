@model Pinly.ViewModels.PinCreateViewModel

@{
    ViewData["Title"] = "Adaugă Pin";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h3 class="fw-bold text-center mb-4">Creează un Pin</h3>

                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Titlu</label>
                            <input asp-for="Title" class="form-control rounded-pill bg-light border-0 py-2 px-3" placeholder="Titlul pin-ului" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Descriere</label>
                            <textarea asp-for="Description" class="form-control rounded-4 bg-light border-0 p-3" rows="4" placeholder="Spune mai multe despre acest pin..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Image" class="form-label fw-bold">Fișier (Poză sau Video)</label>
                            <input asp-for="Image" type="file" class="form-control" accept="image/*,video/mp4,video/x-m4v,video/*" required />
                            <span asp-validation-for="Image" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-danger w-100 rounded-pill fw-bold py-2">Publică</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}